<h1>Room <%= @room.id %></h1>

<div class="card text-center mt-4 mb-4">
  <div class="card-body">
    <h3>Online:</h3>
    <div id="status">
      <%= render @room.members %>
    </div>
  </div>
</div>

<%= link_to "Leave", root_path %>

<p id="notice"><%= notice %></p>

<div class="messages">
  <div class="messages-inner" id="messages" data-room-id="<%= @room.id %>">
    <%= render @room.messages %>
  </div>
</div>

<%= render 'messages/form' %>
